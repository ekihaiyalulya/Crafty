<?xml version="1.0" encoding="utf-8"?>
<!-- activity_login.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".EditProductActivity">

    <TextView
        android:id="@+id/Uploadview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="EDIT PRODUCT"
        android:textColor="#D27C17"
        android:textSize="35sp"
        android:textAlignment="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Uploadview"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_upload">

        <ImageView
            android:id="@+id/uploadImageProduct"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_launcher_add_image_foreground" />

        <ProgressBar
            android:id="@+id/proggress_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:indeterminateTint="#D27C17"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/aadd_product"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/proggress_product"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/upload_border"
            android:fontFamily="@font/poppins_medium"
            android:hint="ADD NAME PRODUCT ..."
            android:paddingLeft="20dp"
            android:textColor="#A1A1A1"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/aadd_hargaa_product"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/aadd_product"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/upload_border"
            android:fontFamily="@font/poppins_medium"
            android:hint="ADD HARGA PRODUCT ..."
            android:paddingLeft="20dp"
            android:textColor="#A1A1A1"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/aadd_deskripsi"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/aadd_hargaa_product"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/upload_border"
            android:fontFamily="@font/poppins_medium"
            android:hint="ADD DESCRIPTION PRODUCT ..."
            android:paddingLeft="20dp"
            android:textColor="#A1A1A1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aadd_deskripsi" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttoneditproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proggress_product"
            android:layout_alignParentRight="true"
            android:layout_marginTop="175dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#D27C17"
            android:src="@drawable/outline_done_all_24" />

    </RelativeLayout>




</RelativeLayout>
