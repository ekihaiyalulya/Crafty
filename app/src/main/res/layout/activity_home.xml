<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dedede"
            tools:context=".HomeActivity">

            <!-- TODO: Update blank fragment layout -->
            <ImageButton
                android:id="@+id/lingkaran"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/lingkaran"
                android:radius="5dp" />

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/menu"
                android:clipToOutline="true" />

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="44dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user" />

            </androidx.cardview.widget.CardView>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/welcome"
                        android:layout_width="382dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="120dp"
                        android:fontFamily="@font/poppins_bold"
                        android:lineSpacingExtra="-11sp"
                        android:text="Welcome,"
                        android:textColor="#D27C17"
                        android:textSize="35sp" />

                    <TextView
                        android:id="@+id/shop_for_cr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/welcome"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineSpacingExtra="-6sp"
                        android:text="Shop for Crafts and Creative Goods."
                        android:textColor="#8F959E"
                        android:textSize="19sp" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/shop_for_cr"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/search_coloumn"
                        android:gravity="center"
                        android:hint="Try Florist, Potrait, Art"
                        android:padding="10dp"
                        android:textColor="#AAAAAA"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/icon_search"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_below="@id/shop_for_cr"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/search" />

                    <TextView
                        android:id="@+id/categori"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_below="@id/editTextEmail"
                        android:fontFamily="@font/poppins_bold"
                        android:lineSpacingExtra="-11sp"
                        android:text="Categories"
                        android:textColor="#121212"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/see_all"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="300dp"
                        android:layout_below="@id/editTextEmail"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="right"
                        android:text="See All"
                        android:textColor="#E29547"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/arrow"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editTextEmail"
                        android:layout_marginTop="22dp"
                        android:layout_toRightOf="@id/see_all"
                        android:background="@drawable/arrow"
                        android:text="See All" />

                    <HorizontalScrollView
                        android:id="@+id/scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/categori"
                        android:layout_marginTop="10dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/categori"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageButton
                                            android:id="@+id/art"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true"
                                            android:background="@drawable/home1"
                                            android:scaleType="fitCenter" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="-37dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Art"
                                            android:textColor="#5C3507"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/categori"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageButton
                                            android:id="@+id/creative"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true"
                                            android:background="@drawable/home2"
                                            android:scaleType="fitCenter" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="-37dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Creative"
                                            android:textColor="#5C3507"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="125dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/categori"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="10dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageButton
                                            android:id="@+id/fashion"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:adjustViewBounds="true"
                                            android:background="@drawable/home3"
                                            android:scaleType="fitCenter" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginTop="-37dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="Fashion"
                                            android:textColor="#5C3507"
                                            android:textSize="16sp" />
                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="351dp"
                        android:layout_height="134dp"
                        android:layout_below="@id/scroll"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/banner" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="102dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-120dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="High Quality Product"
                            android:textColor="#5C3507"
                            android:textSize="23sp" />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:layout_marginTop="-55dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="off"
                            android:textColor="#5C3507"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-45dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="50%"
                            android:textColor="#5C3507"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/see_all_ite"
                            android:layout_width="90dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="See All Item"
                            android:textColor="#ffffff" />

                        <ImageButton
                            android:id="@+id/arrow1"
                            android:layout_width="16dp"
                            android:layout_height="8dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="-16dp"
                            android:background="@drawable/arrow1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/linearLayout"
                        android:orientation="vertical"
                        android:layout_marginTop="-40dp"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/popular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:lineSpacingExtra="-11sp"
                            android:text="Popular"
                            android:textColor="#121212"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/see_all1"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="280dp"
                            android:layout_marginTop="-30dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="left"
                            android:text="See All"
                            android:textColor="#E29547"
                            android:textSize="14sp" />

                        <ImageButton
                            android:id="@+id/arrow2"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="330dp"
                            android:layout_marginTop="-16dp"
                            android:layout_marginBottom="20dp"
                            android:layout_toRightOf="@id/see_all"
                            android:background="@drawable/arrow"
                            android:text="See All" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Elemen tas1 -->
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/tas1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/tas1" />


                                <ImageButton
                                    android:id="@+id/wishlist_tas1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/whislist"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tas1_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tas1"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Totebag Lukis"
                                    android:textColor="#AAAAAA"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tas1_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tas1_name"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Rp. 25.000"
                                    android:textColor="#121212"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                            <!-- Elemen Bundle -->
                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/bundle"
                                    android:layout_width="138dp"
                                    android:layout_height="149dp"
                                    android:background="@drawable/bundle" />

                                <ImageButton
                                    android:id="@+id/wishlist_bundle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@drawable/whislist"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/bundle_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/bundle"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Bundle Hanging"
                                    android:textColor="#AAAAAA"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/bundle_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/bundle_name"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="Rp. 25.000"
                                    android:textColor="#121212"
                                    android:textSize="18sp" />
                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>

            <fragment
                android:id="@+id/nav_host_fragment_activity_main"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navGraph="@navigation/mobile_navigation" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
