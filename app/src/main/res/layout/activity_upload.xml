<?xml version="1.0" encoding="utf-8"?>
<!-- activity_login.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    tools:context=".UploadActivity">

    <TextView
        android:id="@+id/Uploadview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_bold"
        android:text="UPLOAD"
        android:textColor="#D27C17"
        android:textSize="35sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_upload"
        android:layout_below="@+id/Uploadview">

    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/ic_launcher_add_image_foreground"
        android:layout_marginLeft="40dp"/>

    <ProgressBar
        android:id="@+id/proggress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:indeterminateTint="#D27C17"
        android:visibility="invisible"/>

        <EditText
            android:id="@+id/aadd"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/upload_border"
            android:hint="ADD NAME PRODUCT ..."
            android:layout_below="@+id/proggress"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#A1A1A1"
            android:layout_marginTop="100dp"
            android:textSize="13dp"/>

        <EditText
            android:id="@+id/aadd_hargaa"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/upload_border"
            android:hint="ADD HARGA PRODUCT ..."
            android:layout_below="@+id/aadd"
            android:paddingLeft="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#A1A1A1"
            android:textSize="13dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aadd_hargaa"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonupload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proggress"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/outline_done_all_24"
            android:backgroundTint="#D27C17"
            android:layout_marginTop="175dp"/>

    </RelativeLayout>




</RelativeLayout>
