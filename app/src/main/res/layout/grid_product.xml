<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/produkview"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/name_product_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption1"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#AAAAAA"
            android:layout_below="@id/card"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/Rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp."
            android:fontFamily="@font/poppins_bold"
            android:textColor="#121212"
            android:layout_below="@id/name_product_view"
            android:layout_marginTop="2dp"

            />

        <TextView
            android:id="@+id/harga_product_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption2"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#121212"
            android:layout_below="@id/name_product_view"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/deskripsi_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption2"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#121212"
            android:layout_below="@id/name_product_view"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="30dp"
            android:visibility="invisible"/>


    </RelativeLayout>


</LinearLayout>